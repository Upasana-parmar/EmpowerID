@using EmpowerID.ViewModel;
@model EmployeeVM
@{
}
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <form asp-action="index" asp-controller="employee" id="AddEmployee" method="post">
                    <div class="card-header">
                        <h6>Employee Details</h6>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12 mb-3">
                            <label class="form-label" asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" class="form-control" required/>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label" asp-for="Email">Email</label>
                            <input type="text" asp-for="Email" class="form-control" required />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label" asp-for="DateOfBirth">Date Of Birth</label>
                            @if(Model.Id > 0)
                            {
                                <input type="date" asp-for="DateOfBirth" class="form-control"  required />
                            }
                            else
                            {
                                <input type="date" asp-for="DateOfBirth" class="form-control" value="" required />
                            }
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label" asp-for="DepartmentId">Department</label>
                            <select asp-for="DepartmentId" class="form-control form-select" asp-items="Model.Departments" required>
                                <option value="">Select Department</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="col-md-12 text-end">
                           <input type="submit" value="Submit" class="btn btn-success"/>
                            <input type="button" value="Cancle" id="btnCancle" class="btn btn-primary"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/jquery.form.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/js/employee/employeeaddupdate.js" asp-append-version="true"></script>
}